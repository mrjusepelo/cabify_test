			<h3 align="center">Checkout</h3>

			<div class="">
				<table class="table table-hover">
					<th>#</th>
					<th>Product</th>
					<th>Quantity</th>
					<th>Price/Unit</th>
					<th>Price/Quantity</th>
					<th>PriceDiscount</th>
					<tr ng-repeat="product in saleCtl.saveProducts track by $index">
						<td>{{$index + 1}}</td>
						<td>{{product.name}}</td>
						<td>{{product.quantity}}</td>
						<td>{{product.price | number:2}} €</td>
						<td>{{product.price * product.quantity | number:2}} €</td>
						<td>{{product.discount | number:2}} €</td>
					</tr>
					<tr><td colspan="6"></td></tr>
					<tr>
						<td colspan="4"></td>
						<td>Total without Discount</td>
						<td>{{saleCtl.total_not_discount_payment | number:2}} €</td>
					</tr>					
					<tr>
						<td colspan="4"></td>
						<td>Total to Pay</td>
						<td>{{saleCtl.total_payment | number:2}} €</td>
					</tr>
				</table>			
			</div>